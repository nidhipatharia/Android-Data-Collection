<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/screen"
    tools:context=".Home" >
    
   <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
   
   <RelativeLayout
       style="@style/outerBox"
       android:layout_centerInParent="true"
       android:background="@drawable/rect_layout" >
    
    <TextView
        android:id="@+id/tvHeading"
        style="@style/Heading"
        android:gravity="center_horizontal"
        android:text="@string/heading" />
    
   
    <Button
        android:id="@+id/btnFillData"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/tvHeading"
        android:layout_alignParentLeft="true"
        android:text="@string/fill" />
    
     <Button
        android:id="@+id/btnViewData"
        style="@style/ButtonStyle"
        android:layout_below="@id/btnFillData"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true" 
        android:text="@string/view"/>
 <Button
        android:id="@+id/btnViewFHCPGov"
        style="@style/ButtonStyle"
        android:layout_below="@id/btnViewData"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/fhcp_gov"
        />
  <Button
        android:id="@+id/btnViewFHCPNonGov"
        style="@style/ButtonStyle"
        android:layout_below="@id/btnViewFHCPGov"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true" 
        android:text="@string/fhcp_non_gov"/>
   <Button
        android:id="@+id/btnViewIFHCP"
        style="@style/ButtonStyle"
        android:layout_below="@id/btnViewFHCPNonGov"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true" 
        android:text="@string/ifhcp"/>      
<TextView
        style="@style/blankTextView"
        android:layout_below="@id/btnViewIFHCP"/>
</RelativeLayout>

</RelativeLayout>