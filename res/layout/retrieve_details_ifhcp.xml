<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Retrieve_Details_FHCP" >

    <TextView
        android:id="@id/tvHeading"
        style="@style/Heading"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeading"
        android:layout_centerInParent="true" >

        <RelativeLayout
            style="@style/outerBox"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/not_available" />

            <TableLayout
                android:id="@+id/tlBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgPhoto"
                android:shrinkColumns="*"
                android:stretchColumns="*" >

                <TableRow android:id="@+id/trName" >

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        style="@style/Label"
                        android:text="@string/first_name" />

                    <TextView
                        android:id="@+id/tvMiddleName"
                        style="@style/Label"
                        android:text="@string/middle_name" />

                    <TextView
                        android:id="@+id/tvLastName"
                        style="@style/Label"
                        android:text="@string/last_name" />
                </TableRow>

                <TableRow android:id="@+id/trFatherName" >

                    <TextView
                        android:id="@+id/tvFatherName"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_weight="0.3"
                        android:text="@string/father_name" />

                    <TextView
                        android:id="@+id/tvFatherFirstName"
                        style="@style/Label"
                        android:layout_weight="0.2"
                        android:text="@string/father_first_name" />

                    <TextView
                        android:id="@+id/tvFatherMiddleName"
                        style="@style/Label"
                        android:layout_weight="0.2"
                        android:text="@string/father_middle_name" />

                    <TextView
                        android:id="@+id/tvFatherLastName"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/father_last_name" />
                </TableRow>

                <TableRow android:id="@+id/trMotherName" >

                    <TextView
                        android:id="@+id/tvMotherName"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/mother_name" />

                    <TextView
                        android:id="@+id/tvMotherFirstName"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_weight="0.2"
                        android:text="@string/mother_first_name" />

                    <TextView
                        android:id="@+id/tvMotherMiddleName"
                        style="@style/Label"
                        android:layout_weight="0.2"
                        android:text="@string/mother_middle_name" />

                    <TextView
                        android:id="@+id/tvMotherLastName"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/mother_last_name" />
                </TableRow>

                <TableRow android:id="@+id/trDateOfBirth" >

                    <TextView
                        android:id="@+id/tvDateOfBirth"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_weight="0.3"
                        android:text="@string/date_of_birth" />

                    <TextView
                        android:id="@+id/tvDateOfBirthProvided"
                        style="@style/Label"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/date_of_birth" />
                </TableRow>

                <TableRow android:id="@+id/trGender" >

                    <TextView
                        android:id="@+id/tvGender"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/gender" />

                    <TextView
                        android:id="@+id/tvGenderSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/gender" />
                </TableRow>

                <TableRow android:id="@+id/trMaritalStatus" >

                    <TextView
                        android:id="@+id/tvMaritalStatus"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/marital_status" />

                    <TextView
                        android:id="@+id/tvMaritalStatusSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/marital_status" />
                </TableRow>

                <TableRow android:id="@+id/trLocation" >

                    <TextView
                        android:id="@+id/tvLocation"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/location" />

                    <TextView
                        android:id="@+id/tvLocationSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/location" />
                </TableRow>

                <TableRow android:id="@+id/trPermanentAddress" >

                    <TextView
                        android:id="@+id/tvPermanentAddress"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/permanent_address" />

                    <TextView
                        android:id="@+id/tvPermanentAddressProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/permanent_address" />
                </TableRow>

                <TableRow android:id="@+id/trCurrentAddress" >

                    <TextView
                        android:id="@+id/tvCurrentAddress"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/current_address" />

                    <TextView
                        android:id="@+id/tvCurrentAddressProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/current_address" />
                </TableRow>

                <TableRow android:id="@+id/trMobileNumber" >

                    <TextView
                        android:id="@+id/tvMobileNumber"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/mobile" />

                    <TextView
                        android:id="@+id/tvMobileNumberProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/mobile" />
                </TableRow>

                <TableRow android:id="@+id/trAlternateNumber" >

                    <TextView
                        android:id="@+id/tvAlternateNumber"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_weight="0.3"
                        android:text="@string/phone" />

                    <TextView
                        android:id="@+id/tvAlternateNumberProvided"
                        style="@style/Label"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/phone" />
                </TableRow>

                <TableRow android:id="@+id/trEmailId" >

                    <TextView
                        android:id="@+id/tvEmailId"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/email" />

                    <TextView
                        android:id="@+id/tvEmailIdProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/email" />
                </TableRow>

                <TableRow android:id="@+id/trIdentificationNumber" >

                    <TextView
                        android:id="@+id/tvIdentificationNumber"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/identication_number" />

                    <TextView
                        android:id="@+id/tvIdentificationNumbersProvided"
                        style="@style/Label"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/identication_number" />
                </TableRow>

                <TableRow android:id="@+id/trTypeOfServiceProvider" >

                    <TextView
                        android:id="@+id/tvTypeOfServiceProvider"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_weight="0.3"
                        android:text="@string/type_of_service_provider" />

                    <TextView
                        android:id="@+id/tvTypeOfServiceProviderSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/type_of_service_provider" />
                </TableRow>
				<TableRow android:id="@+id/trQualification" >

                    <TextView
                        android:id="@+id/tvQualification"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/qualification" />

                    <TextView
                        android:id="@+id/tvQualificationSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3" />
                </TableRow>
                
                
                <TableRow android:id="@+id/trPracticingSince" >

                    <TextView
                        android:id="@+id/tvPracticingSince"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/practicing_since" />

                    <TextView
                        android:id="@+id/tvPracticingSinceProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/practicing_since" />
                </TableRow>

                <TableRow android:id="@+id/trPracticingLocation" >

                    <TextView
                        android:id="@+id/tvPracticingLocation"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/practicing_location" />

                    <TextView
                        android:id="@+id/tvPracticingLocationProvided"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3"
                        android:text="@string/practicing_location" />
                </TableRow>
                <TableRow 
                    android:id="@+id/trPrescribingMethod"
                    >
                    <TextView
                        android:id="@+id/tvPrescribingMethod"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/prescribing_method" />

                    <TextView
                        android:id="@+id/tvPrescribingMethodSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3" />
                </TableRow>
				
                <TableRow 
                    android:id="@+id/trModeOfService"
                    >
                    <TextView
                        android:id="@+id/tvModeOfService"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/mode_of_service" />

                    <TextView
                        android:id="@+id/tvModeOfServiceSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3" />
                    
                </TableRow>
                <TableRow 
                    android:id="@+id/trVehicle"
                    >
                  <TextView
                        android:id="@+id/tvVehicle"
                        style="@style/Label"
                        android:layout_weight="0.3"
                        android:text="@string/vehicle" />

                    <TextView
                        android:id="@+id/tvVehicleSelected"
                        style="@style/Label"
                        android:layout_alignLeft="@+id/tvIdentificationNumberProvided"
                        android:layout_alignStart="@+id/tvIdentificationNumberProvided"
                        android:layout_gravity="start"
                        android:layout_span="3" />
                    
                </TableRow>
                
                
             </TableLayout>
            <Button
                android:id="@+id/btnNext"
                style="@style/ButtonStyle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tlBox"
                android:layout_toRightOf="@id/btnClick"
                android:text="@string/next" />

            <TextView
                style="@style/blankTextView"
                android:layout_below="@id/btnNext" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>